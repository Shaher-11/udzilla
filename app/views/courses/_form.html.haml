-# frozen_string_literal: true
= simple_form_for(@course) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.label :avatar
    .row
    - if @course.avatar.attached?
      = image_tag @course.avatar, width: "100px"
    %p
    .row 
      = f.file_field :avatar
    .row
    = f.label :description
    = f.rich_text_area :description
    %small= f.error :description, class: 'text-danger'
    = f.input :short_description
    = f.input :language, collection: Course.languages, include_blank: true
    = f.input :level, collection: [ "Beginner", "Intermediate", "Advanced"]
    = f.input :price
    = f.input :published

  .form-actions
    .btn.btn-success.mybtn
      = f.button :submit, class: 'text-white'
